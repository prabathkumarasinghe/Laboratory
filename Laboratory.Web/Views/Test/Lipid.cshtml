@model List<LipidProfile>

@{
    ViewBag.Title = "Data Entry Table";
}

<h2>Enter Data</h2>

<form asp-action="CreateTable" method="post">
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => Model[i].Id)
                        @Model[i].Id
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Name, new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Age, new { @class = "form-control" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
