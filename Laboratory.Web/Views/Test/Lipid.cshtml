@model LipidProfile

@{
    ViewData["Title"] = "Enter Lipid Profile Data";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="GeneratePdf" method="post">
    <div class="form-group">
        <label asp-for="TotalCholesterol" class="control-label"></label>
        <input asp-for="TotalCholesterol" class="form-control" />
        <span asp-validation-for="TotalCholesterol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HDL" class="control-label"></label>
        <input asp-for="HDL" class="form-control" />
        <span asp-validation-for="HDL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LDL" class="control-label"></label>
        <input asp-for="LDL" class="form-control" />
        <span asp-validation-for="LDL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Triglycerides" class="control-label"></label>
        <input asp-for="Triglycerides" class="form-control" />
        <span asp-validation-for="Triglycerides" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit">Generate PDF</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
