@section Scripts {
    <script>
        function showTestFields() {
            const testType = document.getElementById("testType").value;
            const dynamicFields = document.getElementById("dynamicFields");
            dynamicFields.innerHTML = ""; // Clear previous fields

            if (testType === "Lipid") {
                dynamicFields.innerHTML = `

                                       <table class="results">
                    <thead>
                        <tr>
                            <th>Test</th>
                            <th>Result (mg/dL)</th>
                            <th>Reference Range (mg/dL)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Total Cholesterol</td>
                            <td>@Model.TotalCholesterol</td>
                            <td>125-200</td>
                        </tr>
                        <tr>
                            <td>HDL Cholesterol</td>
                            <td>@Model.HDL</td>
                            <td>40-60</td>
                        </tr>
                        <tr>
                            <td>LDL Cholesterol</td>
                            <td>@Model.LDL</td>
                            <td>100-129</td>
                        </tr>
                        <tr>
                            <td>Triglycerides</td>
                            <td>@Model.Triglycerides</td>
                            <td>50-150</td>
                        </tr>
                        <tr>
                            <td>VLDL</td>
                            <td>30</td>
                            <td>5-40</td>
                        </tr>
                    </tbody>
                </table>
                                        `;
            } else if (testType === "Urine") {
                dynamicFields.innerHTML = `

                                              <table class="results">
                            <thead>
                                
                                    <th>Test</th>
                                    <th>Result (mg/dL)</th>
                                    <th>Reference Range (mg/dL)</th>
                                
                            </thead>
                            <tbody>
                                <tr>
                                    <td>WBC</td>
                                            <td>@Model.WBC</td>
                                    <td>4.0-10.0</td>
                                </tr>
                                <tr>
                                    <td>Neutrophils</td>
                                            <td>@Model.Neutrophils</td>
                                    <td>40-80</td>
                                </tr>
                                <tr>
                                    <td>Lymphocytes</td>
                                            <td>@Model.Lymphocytes</td>
                                    <td>20-40</td>
                                </tr>
                                <tr>
                                    <td>Eosinophils</td>
                                            <td>@Model.Eosinophils</td>
                                    <td>1-6</td>
                                </tr>
                                <tr>
                                    <td>RBC</td>
                                                    <td>@Model.RBC</td>
                                    <td>3.8-4.8</td>
                                </tr>
                                         <tr>
                                            <td>HB</td>
                                                            <td>@Model.RBC</td>
                                            <td>3.8-4.8</td>
                                        </tr>

                                                 <tr>
                                            <td>HCT</td>
                                                            <td>@Model.Hb</td>
                                            <td>3.8-4.8</td>
                                        </tr>

                                                 <tr>
                                            <td>MCV</td>
                                                            <td>@Model.HCT</td>
                                            <td>3.8-4.8</td>
                                        </tr>
                                                 <tr>
                                            <td>MCH</td>
                                                            <td>@Model.MCV</td>
                                            <td>3.8-4.8</td>
                                        </tr>
                                                 <tr>
                                            <td>Platelet Count</td>
                                                            <td>@Model.MCH</td>
                                            <td>3.8-4.8</td>
                                        </tr>
                                                 <tr>
                                                    <td>Platelet Count</td>
                                                                    <td>@Model.PlateletCount</td>
                                                    <td>3.8-4.8</td>
                                                </tr>
                                                 <tr>
                                                    <td>Platelet Count</td>
                                                                    <td>@Model.MPV</td>
                                                    <td>3.8-4.8</td>
                                                </tr>
                            </tbody>
                        </table>

                                        `;
            } else if (testType === "XRay") {
                dynamicFields.innerHTML = `
                                            <div class="form-group">
                                                <label for="area">Body Area</label>
                                                <input type="text" id="area" name="BodyArea" class="form-control" />
                                            </div>


                          <div style="display: flex;">
                            <div style="flex: 1; padding-right: 10px;">
                              <input type="text" placeholder="Input 1"><br>
                              <input type="text" placeholder="Input 2"><br>
                              <input type="text" placeholder="Input 3"><br>
                              <input type="text" placeholder="Input 4"><br>
                              <input type="text" placeholder="Input 5"><br>
                            </div>
                            <div style="flex: 1;">
                              <input type="text" placeholder="Input 6"><br>
                              <input type="text" placeholder="Input 7"><br>
                              <input type="text" placeholder="Input 8"><br>
                              <input type="text" placeholder="Input 9"><br>
                              <input type="text" placeholder="Input 10"><br>
                            </div>
                          </div>


                                        `;
            }
        }
    </script>
}