    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .report-container {
            width: 210mm;
            height: 297mm; /* A4 size */
            margin: 10mm auto;
            padding: 20mm;
            background: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            box-sizing: border-box;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                margin: 0;
                font-size: 14px;
            }

            .header p {
                margin: 5px 0;
                font-size: 14px;
                color: #555;
            }

        .details, .results {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 14px;
            font-size: 12px;
        }

            .details th, .details td, .results th, .results td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: left;
            }

            .details th {
                background-color: #f9f9f9;
            }

            .results th {
                background-color: #e9ecef;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
            color: #777;
        }
    </style>

  

    <div class="report-container">
        <div class="header">
            <h1>Lipid Profile Test Report</h1>
            <p>Diagnostic Lab Name</p>
            <p>Address, City, State, Zip Code</p>
            <p>Contact: +1 234 567 890 | Email: info@lab.com</p>
        </div>
        <table class="details">
            <tr>
                <th>Patient Name</th>
                <td>@Model.PatientName</td>
                <th>Age</th>
                <td>45</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Ref Number</th>
                <td>@Model.RefNumber</td>
                <th>Lab Number</th>
                <td>@Model.LabNumber</td>
            </tr>
        </table>

        <div class="form-group">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Test Type</label>
            </div>
            
            <select id="testType" name="TestType" class="form-control" onchange="showTestFields()">
                <option value="">-- Select Test Type --</option>
               
                
                @foreach (var testType in testTypes)
                {
                    
                    <option value="@testType.Value">@testType.Text</option>
                }
                     
            </select>
            <br />
            <div id="dynamicFields">
                <!-- Dynamic fields will appear here -->
            </div>

        </div>

        
        <div class="footer">
            <p>This is a computer-generated report and does not require a signature.</p>
        </div>
        <div class="col-5 offset-2">
            <button type="submit">Generate PDF</button>
            <a asp-action="GeneratePdf" class="btn-primary btn form-control ">Download</a>
        </div>
    </div>
    

