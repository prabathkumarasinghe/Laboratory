@model IEnumerable<ParameterDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Test List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="TestEdit" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Test</a>
			</div>
			<div class="col-6 text-end">
				<a asp-action="Lipid" class="btn btn-outline-warning mt-2 btn-sm">Edit</a>
			</div>
			<div class="col-6 text-end">
				<a asp-action="OrderUpdate" asp-controller="Cart" class="btn btn-outline-warning mt-2 btn-sm">Cart</a>
			</div>
			<div class="col-6 text-end">
				<a asp-action="Report" class="btn btn-outline-warning mt-2 btn-sm">check</a>
			</div>
			<div class="col-6 text-end">
				<a asp-action="Result" asp-controller="Cart" class="btn btn-outline-warning mt-2 btn-sm">result</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Ref Number
					</th>
					<th>
						Lab Number
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.PatientName
						</td>
						<td>
							@item.RefNumber
						</td>
						<td>
							@item.LabNumber
						</td>
						<td>
							<a class="btn btn-success" asp-action="ResultUpdate" asp-route-testId="@item.Id">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a class="btn btn-danger" asp-action="ResultDelete" asp-route-testId="@item.Id">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>